<h1>Login</h1>


<form method="post" style="text-align: center;">
    <label for="username" style="display: inline-block; width: 100px;">Login:</label>
    <input type="text" id="username" name="username" /> <br />
    <label for="password" style="display: inline-block; width: 100px;">Password:</label>
    <input type="password" id="password" name="password" /> <br />
    <input type="submit" value="Submit" asp-page-handler="Submit" />
</form>


@if (ViewData.ContainsKey("username") && ViewData["username"] != null)
{
    <h2>@ViewData["Message"]</h2>
    <p >Username: @ViewData["username"]</p>
}


